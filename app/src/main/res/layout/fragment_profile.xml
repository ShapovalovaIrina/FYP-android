<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:overScrollMode="never"
    tools:context=".ui.ProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:paddingTop="40sp"
            android:shadowColor="#0E0E0E"
            android:text="Профиль"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="40sp"
                android:text="Приюты"
                android:textSize="20sp" />

            <!--    Create shelter    -->
            <Button
                android:id="@+id/profile_fragment_show_shelters"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Поддерживаемые приюты"
                android:textSize="12sp"
                style="?attr/materialButtonOutlinedStyle" />

            <!--    Create shelter    -->
            <Button
                android:id="@+id/profile_fragment_create_shelter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Добавить приют"
                android:textSize="12sp"
                style="?attr/materialButtonOutlinedStyle" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="40sp"
                android:text="Питомцы"
                android:textSize="20sp" />

            <!--    Create pet    -->
            <Button
                android:id="@+id/profile_fragment_create_pet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Добавить питомца"
                android:textSize="12sp"
                style="?attr/materialButtonOutlinedStyle" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="40sp"
                android:text="Аккаунт"
                android:textSize="20sp" />

            <!--    Update password    -->
            <Button
                android:id="@+id/profile_fragment_update_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Изменить пароль"
                android:textSize="12sp"
                style="?attr/materialButtonOutlinedStyle" />

            <!--    Sign out    -->
            <Button
                android:id="@+id/profile_fragment_sign_out"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Выход из аккаунта"
                android:textSize="12sp"
                style="?attr/materialButtonOutlinedStyle" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:paddingTop="50sp"
            android:shadowColor="#0E0E0E"
            android:text="@string/profile_fragment_feedback"
            android:textSize="15sp" />

        <Button
            android:id="@+id/profile_fragment_send_feedback"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:text="Обратная связь"
            android:textSize="12sp"
            app:icon="@drawable/ic_baseline_send_24"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon" />
    </LinearLayout>
</androidx.core.widget.NestedScrollView>