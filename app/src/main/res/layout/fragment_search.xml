<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.SearchFragment"
    android:orientation="vertical">

    <!--  Whom are we looking for? and expand/collapse arrow  -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/search_fragment_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="50dp"
            android:textSize="20sp"
            android:layout_centerInParent="true"
            android:textAlignment="center"
            android:textColor="#000000"
            android:text="Кого ищем?" />

        <CheckBox
            android:id="@+id/search_fragment_show_more_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/search_fragment_text_view"
            android:layout_alignBottom="@id/search_fragment_text_view"
            android:layout_marginLeft="20dp"
            android:gravity="bottom"
            android:button="@drawable/ic_expand_collapse_arrow"
            app:buttonTint="@android:color/black"
            android:checked="false" />
    </RelativeLayout>

    <!--  Layout with scroll view and filter view  -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <include
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:visibility="gone"
            layout="@layout/filter_view" />

        <include
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            layout="@layout/search_fragment_discrete_scroll_view" />
    </RelativeLayout>
</LinearLayout>