<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.SearchFragment"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="50dp"
        android:textSize="20sp"
        android:gravity="center"
        android:fontFamily="sans-serif-light"
        android:includeFontPadding="false"
        android:shadowColor="#0E0E0E"
        android:textAlignment="center"
        android:textColor="#000000"
        android:text="Кого ищем?" />

    <com.google.android.material.button.MaterialButtonToggleGroup
        android:id="@+id/search_fragment_button_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        app:singleSelection="false">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/search_fragment_dog_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="Собаки"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:textAppearance="@style/CustomButtonTextAppearance"
            android:textColor="#000000"
            android:textSize="20sp"
            android:backgroundTint="#FFFFFF" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/search_fragment_cat_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="Котики"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:textAppearance="@style/CustomButtonTextAppearance"
            android:textColor="#000000"
            android:textSize="20sp"
            android:backgroundTint="#FFFFFF" />
    </com.google.android.material.button.MaterialButtonToggleGroup>

    <TextView
        android:id="@+id/search_fragment_start_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:fontFamily="sans-serif-thin"
        android:includeFontPadding="false"
        android:paddingTop="20sp"
        android:shadowColor="#0E0E0E"
        android:gravity="center"
        android:text="@string/search_fragment_start_search"
        android:textColor="#000000"
        android:textSize="15sp" />

    <com.yarolegovich.discretescrollview.DiscreteScrollView
        android:id="@+id/search_fragment_recycle_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:dsv_orientation="horizontal"
        tools:listitem="@layout/card_pet" />
</LinearLayout>