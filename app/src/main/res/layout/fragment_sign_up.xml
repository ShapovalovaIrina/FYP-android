<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sign_in_fragment_scroll_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:overScrollMode="never"
    tools:context=".ui.SignUpFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.progressindicator.CircularProgressIndicator
            android:id="@+id/sign_up_fragment_circular_progress_indicator"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:indeterminate="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:layout_alignParentStart="true"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:includeFontPadding="false"
                android:paddingTop="40sp"
                android:shadowColor="#0E0E0E"
                android:text="Регистрация"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="20sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:includeFontPadding="false"
                android:paddingTop="40sp"
                android:shadowColor="#0E0E0E"
                android:text="Почта"
                android:textColor="#000000"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/sign_up_fragment_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="example@yandex.ru"
                android:inputType="textEmailAddress" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:includeFontPadding="false"
                android:paddingTop="40sp"
                android:shadowColor="#0E0E0E"
                android:text="Ваше имя"
                android:textColor="#000000"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/sign_up_fragment_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Имя"
                android:inputType="textPersonName" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:includeFontPadding="false"
                android:paddingTop="40sp"
                android:shadowColor="#0E0E0E"
                android:text="Пароль"
                android:textColor="#000000"
                android:textSize="20sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-thin"
                android:includeFontPadding="false"
                android:paddingTop="10sp"
                android:shadowColor="#0E0E0E"
                android:text="Длина пароля должна быть не менее 6 символов"
                android:textColor="#000000"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/sign_up_fragment_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Введите пароль"
                android:inputType="textPassword" />

            <EditText
                android:id="@+id/sign_up_fragment_repeat_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:ems="10"
                android:hint="Повторите введенный пароль"
                android:inputType="textPassword" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/fragment_sign_up_email_input_text_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20sp"
                android:layout_marginTop="40sp"
                app:startIconDrawable="@drawable/ic_baseline_email_24"
                android:hint="Почта"
                app:counterEnabled="true"
                app:counterMaxLength="20"
                app:errorEnabled="true"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox" >

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/fragment_sign_up_email_input_name_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20sp"
                android:layout_marginTop="20sp"
                app:startIconDrawable="@drawable/ic_baseline_person_outline_24"
                android:hint="Ваше имя"
                app:counterEnabled="true"
                app:counterMaxLength="20"
                app:errorEnabled="true"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox" >

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/fragment_sign_up_email_input_password_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20sp"
                android:layout_marginTop="20sp"
                android:hint="Пароль"
                app:counterEnabled="true"
                app:counterMaxLength="20"
                app:errorEnabled="true"
                app:endIconMode="password_toggle"
                app:helperTextEnabled="true"
                app:helperText="Длина пароля должна быть не менее 6 символов"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox" >

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/fragment_sign_up_email_input_repeat_password_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20sp"
                android:layout_marginTop="20sp"
                android:hint="Повторите пароль"
                app:counterEnabled="true"
                app:counterMaxLength="20"
                app:errorEnabled="true"
                app:endIconMode="password_toggle"
                app:helperTextEnabled="true"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox" >

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword" />

            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/sign_up_fragment_button"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Зарегистрироваться"
                android:layout_gravity="center"
                android:textAppearance="@style/CustomButtonTextAppearance"
                android:textColor="#B3000000" />

            <Button
                android:id="@+id/sign_up_fragment_sign_in_button"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Войти"
                android:layout_gravity="center"
                android:textAppearance="@style/CustomButtonTextAppearance"
                android:textColor="#B3000000" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/sign_up_fragment_not_receive_mail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:text="Не получили письмо?"
                android:textAppearance="@style/CustomButtonTextAppearance"
                android:textColor="#000000"
                android:layout_gravity="center" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/sign_up_fragment_already_have_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:text="Уже есть аккаунт?"
                android:textAppearance="@style/CustomButtonTextAppearance"
                android:textColor="#000000"
                android:layout_gravity="center" />
        </LinearLayout>
    </RelativeLayout>
</ScrollView>