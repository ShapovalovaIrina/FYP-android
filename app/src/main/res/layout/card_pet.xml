<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_pet"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/card_pet_image"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:src="@drawable/dog_mock_image"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp" >

            <TextView
                android:id="@+id/card_pet_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Pet name"
                style="@style/TextAppearance.MaterialComponents.Body1"
                android:gravity="center_vertical"
                android:paddingLeft="20dp" />

            <CheckBox
                android:id="@+id/card_pet_favourite"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:gravity="center"
                android:button="@drawable/ic_favourite_icon"
                app:buttonTint="@drawable/ic_favourite_icon_color"
                android:checked="false" />
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>